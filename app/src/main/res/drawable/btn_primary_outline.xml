<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape android:shape="rectangle">
            <gradient android:angle="135" android:endColor="#DEEFFD" android:startColor="#DEEFFD" />
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="#127FD6" />
        </shape>

    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="225" android:endColor="#FFFFFF" android:startColor="#FFFFFF" />
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="#2196F3" />
        </shape>
    </item>
</selector>