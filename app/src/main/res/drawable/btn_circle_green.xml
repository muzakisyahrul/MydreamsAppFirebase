<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape android:shape="rectangle">
            <gradient android:angle="135" android:endColor="@color/green_dark" android:startColor="@color/green_dark" />
            <corners android:radius="50dp" />
            <stroke android:width="1dp" android:color="@color/green_dark" />
        </shape>

    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="225" android:endColor="@color/green" android:startColor="@color/green" />
            <corners android:radius="50dp" />
            <stroke android:width="1dp" android:color="@color/green" />
        </shape>
    </item>
</selector>