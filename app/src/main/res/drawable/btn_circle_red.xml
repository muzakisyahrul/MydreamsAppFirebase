<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape android:shape="rectangle">
            <gradient android:angle="135" android:endColor="#CA0909" android:startColor="#CA0909" />
            <corners android:radius="50dp" />
            <stroke android:width="1dp" android:color="#CA0909" />
        </shape>

    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="225" android:endColor="@color/red" android:startColor="@color/red" />
            <corners android:radius="50dp" />
            <stroke android:width="1dp" android:color="@color/red" />
        </shape>
    </item>
</selector>